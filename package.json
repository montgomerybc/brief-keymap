{
    "name": "brief-keymap",
    "displayName": "brief-keymap",
    "description": "Brief Emulation for Visual Studio Code",
    "version": "0.0.1",
    "publisher": "brief-keymap",
    "engines": {
        "vscode": "^1.16.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [],
        "keybindings": [
            {
                "key": "home",
                "command": "brief.home",
                "when": "editorTextFocus"
            },
            {
                "key": "end",
                "command": "brief.end",
                "when": "editorTextFocus"
            },
            {
                "key": "alt+=",
                "command": "workbench.action.nextEditor"
            },
            {
                "key": "alt+-",
                "command": "workbench.action.previousEditor"
            },
            {
                "key": "alt+b",
                "command": "workbench.action.showAllEditors"
            },
            {
                "key": "alt+backspace",
                "command": "deleteWordRight",
                "when": "editorTextFocus && !editorReadonly"
            },
            {
                "key": "alt+d",
                "command": "editor.action.deleteLines",
                "when": "editorTextFocus && !editorReadonly"
            },
            {
                "key": "alt+e",
                "command": "workbench.action.files.openFile"
            },
            {
                "key": "alt+g",
                "command": "workbench.action.gotoLine"
            },
            {
                "key": "alt+k",
                "command": "deleteAllRight",
                "when": "editorTextFocus && !editorReadonly"
            },
            {
                "key": "alt+n",
                "command": "workbench.action.nextEditor"
            },
            {
                "key": "alt+o",
                "command": "workbench.action.files.saveAs",
                "when": "editorTextFocus"
            },
            {
                "key": "alt+pagedown",
                "command": "brief.down5"
            },
            {
                "key": "alt+pageup",
                "command": "brief.up5"
            },
            {
                "key": "alt+s",
                "command": "actions.find"
            },
            {
                "key": "alt+s",
                "command": "editor.action.extensioneditor.hidefind",
                "when": "extensionEditorWebviewFocus"
            },
            {
                "key": "alt+s",
                "command": "editor.action.extensioneditor.showfind",
                "when": "extensionEditorWebviewFocus"
            },
            {
                "key": "alt+s",
                "command": "editor.action.webvieweditor.showFind",
                "when": "webviewEditorFocus"
            },
            {
                "key": "alt+s",
                "command": "settings.action.search",
                "when": "inSettingsEditor"
            },
            {
                "key": "alt+s",
                "command": "keybindings.editor.searchKeybindings",
                "when": "inKeybindings && keybindingFocus"
            },
            {
                "key": "alt+s",
                "command": "workbench.action.terminal.focusFindWidget",
                "when": "terminalFocus"
            },
            {
                "key": "alt+t",
                "command": "editor.action.startFindReplaceAction"
            },
            {
                "key": "alt+u",
                "command": "undo",
                "when": "editorTextFocus && !editorReadonly"
            },
            {
                "key": "alt+w",
                "command": "workbench.action.files.save",
                "when": "editorTextFocus"
            },
            {
                "key": "alt+y",
                "command": "redo",
                "when": "editorTextFocus && !editorReadonly"
            },
            {
                "key": "ctrl+-",
                "command": "workbench.action.closeActiveEditor",
                "when": "editorIsOpen"
            },
            {
                "key": "ctrl+-",
                "command": "workbench.action.closeWindow",
                "when": "!editorIsOpen"
            },
            {
                "key": "ctrl+enter",
                "command": "editor.action.insertLineAfter",
                "when": "editorTextFocus && !editorReadonly"
            },
            {
                "key": "ctrl+g",
                "command": "workbench.action.gotoSymbol"
            },
            {
                "key": "ctrl+insert",
                "command": "editor.action.clipboardCopyAction",
                "when": "editorTextFocus"
            },
            {
                "key": "ctrl+k",
                "command": "deleteAllLeft",
                "when": "editorTextFocus && !editorReadonly"
            },
            {
                "key": "ctrl+pagedown",
                "command": "brief.moveToEndOfFile",
                "when": "editorTextFocus"
            },
            {
                "key": "f5",
                "command": "actions.find"
            },
            {
                "key": "f5",
                "command": "editor.action.extensioneditor.hidefind",
                "when": "extensionEditorWebviewFocus"
            },
            {
                "key": "f5",
                "command": "editor.action.extensioneditor.showfind",
                "when": "extensionEditorWebviewFocus"
            },
            {
                "key": "f5",
                "command": "editor.action.webvieweditor.showFind",
                "when": "webviewEditorFocus"
            },
            {
                "key": "f5",
                "command": "settings.action.search",
                "when": "inSettingsEditor"
            },
            {
                "key": "f5",
                "command": "keybindings.editor.searchKeybindings",
                "when": "inKeybindings && keybindingFocus"
            },
            {
                "key": "f5",
                "command": "workbench.action.terminal.focusFindWidget",
                "when": "terminalFocus"
            },
            {
                "key": "f6",
                "command": "editor.action.startFindReplaceAction"
            },
            {
                "key": "insert",
                "command": "editor.action.clipboardPasteAction",
                "when": "editorTextFocus && !editorReadonly"
            },
            {
                "key": "numpad_add",
                "command": "editor.action.clipboardCopyAction",
                "when": "editorTextFocus"
            },
            {
                "key": "numpad_multiply",
                "command": "undo",
                "when": "editorTextFocus && !editorReadonly"
            },
            {
                "key": "numpad_subtract",
                "command": "editor.action.clipboardCutAction",
                "when": "editorTextFocus && !editorReadonly"
            },
            {
                "key": "shift+delete",
                "command": "editor.action.clipboardCutAction",
                "when": "editorTextFocus && !editorReadonly"
            },
            {
                "key": "shift+f5",
                "command": "editor.action.nextMatchFindAction",
                "when": "editorFocus"
            },
            {
                "key": "shift+f6",
                "command": "editor.action.replaceOne",
                "when": "editorFocus && findWidgetVisible"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "xtest": "mocha"
    },
    "devDependencies": {
        "typescript": "^2.5.2",
        "vscode": "^1.1.5",
        "mocha": "^7.1.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^7.0.1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/montgomerybc/brief-keymap.git"
    },
    "private": true,
    "dependencies": {
        "filepath": "^1.1.0"
    }
}
