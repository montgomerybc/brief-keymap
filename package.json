{
    "name": "brief-keymap",
    "displayName": "brief-keymap",
    "description": "Brief Emulation for Visual Studio Code",
    "version": "0.0.1",
    "publisher": "montgomerybc",
    "engines": {
        "vscode": "^1.16.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [],
        "keybindings": [
            {
                "key": "home",
                "command": "brief.home",
                "when": "editorTextFocus"
            },
            {
                "key": "end",
                "command": "brief.end",
                "when": "editorTextFocus"
            },
            {
                "key": "alt+backspace",
                "command": "deleteWordRight",
                "when": "editorTextFocus && !editorReadonly"
            },
            {
                "key": "alt+d",
                "command": "editor.action.deleteLines",
                "when": "editorTextFocus && !editorReadonly"
            },
            {
                "key": "alt+e",
                "command": "workbench.action.files.openFile"
            },
            {
                "key": "alt+g",
                "command": "workbench.action.gotoLine"
            },
            {
                "key": "alt+k",
                "command": "deleteAllRight",
                "when": "editorTextFocus && !editorReadonly"
            },
            {
                "key": "alt+o",
                "command": "workbench.action.files.saveAs",
                "when": "editorTextFocus"
            },
            {
                "key": "alt+u",
                "command": "undo",
                "when": "editorTextFocus && !editorReadonly"
            },
            {
                "key": "alt+w",
                "command": "workbench.action.files.save",
                "when": "editorTextFocus"
            },
            {
                "key": "alt+y",
                "command": "redo",
                "when": "editorTextFocus && !editorReadonly"
            },
            {
                "key": "ctrl+-",
                "command": "workbench.action.closeActiveEditor",
                "when": "editorIsOpen"
            },
            {
                "key": "ctrl+-",
                "command": "workbench.action.closeWindow",
                "when": "!editorIsOpen"
            },
            {
                "key": "ctrl+enter",
                "command": "editor.action.insertLineAfter",
                "when": "editorTextFocus && !editorReadonly"
            },
            {
                "key": "ctrl+insert",
                "command": "editor.action.clipboardCopyAction",
                "when": "editorTextFocus"
            },
            {
                "key": "ctrl+k",
                "command": "deleteAllLeft",
                "when": "editorTextFocus && !editorReadonly"
            },
            {
                "key": "ctrl+pagedown",
                "command": "brief.moveToEndOfFile",
                "when": "editorTextFocus"
            },
            {
                "key": "numpad_add",
                "command": "editor.action.clipboardCopyAction",
                "when": "editorTextFocus"
            },
            {
                "key": "numpad_multiply",
                "command": "undo",
                "when": "editorTextFocus && !editorReadonly"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.5.2",
        "vscode": "^1.1.5",
        "mocha": "^3.5.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}